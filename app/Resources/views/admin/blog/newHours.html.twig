{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_hours_new' %}

{% block main %}
    <h1>{{ 'title.hours_new'|trans }}</h1>

    {{ form_start(form) }}

        {{ form_row(form.dayOfWeek) }}
        {{ form_row(form.openingTime) }}
        {{ form_row(form.closingTime) }}

        <input type="submit" value="{{ 'label.create_openingHours'|trans }}" class="btn btn-primary" />
        <a href="{{ path('admin_post_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
